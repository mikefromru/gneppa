<Icon@MDIcon>
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_dark
    pos_hint: {'center_y': .5}
    font_size: '30sp'

<Label_@MDLabel>
    font_name: 'fonts/OpenSans/OpenSans-Medium.ttf'
    font_size: '14sp'

<FlatButton_@MDFlatButton>
    font_name: 'fonts/OpenSans/OpenSans-Medium.ttf'
    font_size: '14sp'
    pos_hint: {'center_y': .5}

<SettingsScreen>

    MDBoxLayout:
        pos_hint: {'top': 1}
        adaptive_height: True
        orientation: 'vertical'
        spacing: dp(15)

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
#md_bg_color: app.theme_cls.primary_color 

            MDIconButton:
                icon: 'arrow-left'
                theme_icon_color: 'Custom'
                icon_color: 'white'
                #icon_color: app.theme_cls.primary_dark
                on_release: root.go_back('home')

            MDLabel:
                text: 'Settings'
                font_size: '16sp'
                theme_text_color: 'Custom'
                text_color: 'white'
                bold: True

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(0),dp(0))

            Icon:
                icon: 'av-timer'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_dark
                pos_hint: {'center_y': .5}

            Label_:
                text: 'Minutes'
                padding_x: dp(20)

            FlatButton_:
                id: minutes
                text: str(root.minutes)
                on_release: root.menu_minutes.open()

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(0),dp(0))

            Icon:
                icon: 'help-circle-outline'

            Label_:
                text: 'Questions'
                padding_x: dp(20)

            FlatButton_:
                id: questions
                text: str(root.questions)
                on_release: root.menu_questions.open()
                pos_hint: {'center_y': .5}

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(0),dp(0))

            Icon:
                icon: 'progress-clock'

            Label_:
                text: 'Clean progress'
                padding_x: dp(20)

            FlatButton_:
                text: 'Clean'
                font_name: 'OpenSans'
                font_size: '14sp'
                pos_hint: {'center_y': .5}
                on_release: root.clean_progress()

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(30),dp(0))

            Icon:
                icon: 'bugle'

            Label_:
                text: 'Sound'
                padding_x: dp(20)

            MDSwitch:
                id: set_sound
                on_active: root.set_sound(self)
                icon_active: 'check'
                pos_hint: {'center_y': .5}

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(30),dp(0))

            Icon:
                icon: 'brightness-3'

            Label_:
                text: 'Dark Theme'
                padding_x: dp(20)

            MDSwitch:
                id: set_bool
                on_active: root.theme_change(self)
                pos_hint: {'center_y': .5}
                icon_active: 'check'

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            padding: (dp(25),dp(0),dp(0),dp(0))

            Icon:
                icon: 'contacts'


            MDLabel:
                text: 'Contact us'
                padding_x: dp(20)
                 
            MDIconButton:
                name: 'whatsapp'
                icon: 'i/soc_network/whatsapp96.png'
                pos_hint: {'center_y': .5}
                icon_size: dp(34)
                on_release: root.get_messanger(self.name)

            MDIconButton:
                name: 'telegram'
                icon: 'i/soc_network/telegram96.png'
                pos_hint: {'center_y': .5}
                icon_size: dp(34)
                on_release: root.get_messanger(self.name)
         
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
                  
        MDBoxLayout:
            size_hint_y: None
            orientation: 'horizontal'
            height: dp(60)
            padding: (dp(0), dp(7), dp(0), dp(7))

            MDBoxLayout:
                size_hint_x: .4

                Image:
                    source: 'i/logo/dark_icon.jpg' if app.theme_cls.theme_style == 'Dark' else 'i/logo/white_icon.jpg'

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: .5

                Label_:
                    text: 'Gneppa'

                Label_:
                    id: app_version
                    theme_text_color: 'Secondary'

            MDBoxLayout:
                orientation: 'vertical'
                padding: (50, 0, 0, 0)

                Label_:
                    id: fromtoyear
                    theme_text_color: 'Secondary'

                MDTextButton:
                    text: '[u]Privacy Policy[/u]'
                    theme_text_color: 'Secondary'
                    markup: True
                    font_name: 'OpenSans'
                    font_size: '14sp'
                    on_release: root.get_privacy_police()
