<VocabularyScreen>
    
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint_y: None
            orientation: 'horizontal'
            height: dp(60)
            md_bg_color: app.theme_cls.bg_light

            MDIconButton:
                icon: 'arrow-left'
                pos_hint: {'center_y': .5}
                on_release: root.go_back()

            MDLabel:
                text: 'Vocabulary'
                font_name: 'OpenSans'
                font_size: '16sp'
                bold: True
       
        ScrollView:
            id: sc
            effect_cls: 'ScrollEffect'

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: (dp(0),dp(10),dp(0),dp(0))
                
                MDList:
                    id: box
