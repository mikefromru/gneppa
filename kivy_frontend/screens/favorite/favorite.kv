<MyContainerFavorite>
    id: my_container
    size_hint_y: None
    orientation: 'vertical'
    padding: (dp(10), dp(10), dp(7), dp(0))
    md_bg_color: app.theme_cls.bg_light
    radius: dp(10)
    
    MDBoxLayout:
        size_hint: 1, .5
        orientation: 'horizontal'

        MDIcon:
            icon: root.icon
            padding: (dp(0), dp(0), dp(10), dp(0)) if root.icon != '' else (dp(0), dp(0), dp(0), dp(0))


        MDLabel:
            text: f'{root.name}   [color=455A64]{root.progress_value}%[/color]' if int(root.progress_value) >= 3 else f'{root.name}'
            font_name: 'OpenSans'
            font_size: '15sp'
            markup: True
            bold: True

        MDIcon:
            id: my_star
            icon: 'star'
            font_size: '22sp'
            theme_text_color: 'Custom'
            # text_color: app.theme_cls.primary_dark
            text_color: 'yellow'
            pos_hint: {'center_x': .7, 'center_y': .5}
            opacity: 1

    MDBoxLayout:
        MDLabel:
            text: 'This topic is about crime and other stuff that relative with that'
            font_name: 'OpenSans'
            font_size: '15sp'
            markup: True

    MDBoxLayout:
        padding: [dp(0), dp(0), dp(0), dp(10)]
        spacing: dp(20)
        orientation: 'horizontal'
        MDRoundFlatIconButton:
            text: 'Vocabulary'
            icon: 'school'
            font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True
            size_hint: 1, None
            on_release: root.get_vocabulary()

        MDFillRoundFlatButton:
            text: 'Questions'
            font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True
            size_hint: 1, None
            on_release: root.on_release()

<FavoriteScreen>
    MDBoxLayout:
        orientation: 'vertical'
#rv_favorite: rv_favorite
#on_pre_enter: self.refresh_recycleview()


        MDBoxLayout:
            rv_favorite: rv_favorite
            orientaiton: 'horizontal'
            size_hint_y: None
            height: dp(60)
            md_bg_color: app.theme_cls.bg_light 

            MDLabel:
                id: my_title
                text: 'Favorites'
                font_name: 'OpenSans'
                font_size: '16sp'
                #theme_text_color: 'Custom'
                #text_color: 'white'
                bold: True
                halign: 'center'

        RecycleView:
            id: rv_favorite
            #data: root.data_from_dataset()
            scroll_type: ['bars', 'content']
            viewclass: 'MyContainerFavorite'
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            do_scroll_y: True

            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                spacing: dp(10)
                default_size_hint: 1, None
                height: self.minimum_height
                default_size: None, dp(150)
                padding: dp(15)
