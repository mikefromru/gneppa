<MyContainerFavorite>
    id: my_container
    size_hint_y: None
    orientation: 'vertical'
    padding: (dp(0), dp(0), dp(7), dp(0))
    orientation: 'horizontal'
    radius: dp(0)

    MDIcon:
        #icon: root.icon
        icon: 'circle-small'
        theme_text_color: 'Custom'
        text_color: app.theme_cls.primary_dark
        font_size: '30sp'
        padding_x: dp(10)
        pos_hint: {'center_y': .5}

    MDLabel:
        text: f'{root.name}   [color=455A64]{root.progress_value}%[/color]' if int(root.progress_value) >= 3 else f'{root.name}'
        font_name: 'OpenSans'
        font_size: '15sp'
        markup: True
        bold: True

    MDIcon:
        id: my_star
        icon: root.star
        font_size: '13sp'
        theme_text_color: 'Custom'
        text_color: app.theme_cls.primary_dark
        pos_hint: {'center_x': .1, 'center_y': .5}
        opacity: 0

    MDIconButton:
        icon: 'dots-vertical'
        icon_size: dp(15)
        theme_icon_color: 'Hint'
        pos_hint: {'center_y': .5, 'center_x': .7}
        on_release: root.get_vocabulary()



<FavoriteScreen>
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientaiton: 'horizontal'
            size_hint_y: None
            height: dp(60)
            md_bg_color: app.theme_cls.primary_color

            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: 'Custom'
                text_color: 'white'
                pos_hint: {'center_y': .5}
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home_screen'

            MDLabel:
                text: 'Favorites'
                font_name: 'OpenSans'
                font_size: '16sp'
                theme_text_color: 'Custom'
                text_color: 'white'
                bold: True

        RecycleView:
            id: rv_favorite
            viewclass: 'MyContainerFavorite'
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            do_scroll_y: True

            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                spacing: dp(0)
                default_size_hint: 1, None
                height: self.minimum_height
                default_size: None, dp(55)
                padding: dp(0)
