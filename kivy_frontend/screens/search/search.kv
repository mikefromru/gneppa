<MyContainerSearch>
    id: my_container_search
    size_hint_y: None
    orientation: 'vertical'
    padding: (dp(0), dp(0), dp(7), dp(0))
    orientation: 'horizontal'
    radius: dp(0)

    MDIcon:
        #icon: root.icon
        icon: 'circle-small'
        theme_text_color: 'Custom'
        text_color: app.theme_cls.primary_dark
        font_size: '30sp'
        padding_x: dp(10)
        pos_hint: {'center_y': .5}

    MDLabel:
        text: f'{root.name}   [color=455A64]{root.progress_value}%[/color]' if int(root.progress_value) >= 3 else f'{root.name}'
        font_name: 'OpenSans'
        font_size: '15sp'
        markup: True
        bold: True

    MDIcon:
        id: my_star
        icon: root.star
        font_size: '13sp'
        theme_text_color: 'Custom'
        text_color: app.theme_cls.primary_dark
        pos_hint: {'center_x': .1, 'center_y': .5}
        opacity: 0

    MDIconButton:
        icon: 'dots-vertical'
        icon_size: dp(15)
        theme_icon_color: 'Hint'
        pos_hint: {'center_y': .5, 'center_x': .7}
        on_release: root.get_vocabulary()

<SearchScreen>

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientaiton: 'horizontal'
            size_hint_y: None
            height: dp(70)

            MDIconButton:
                icon: 'arrow-left'
                pos_hint: {'center_y': .5}
                #theme_icon_color: 'Custom'
                #icon_color: 'white'
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home_screen'

            MDTextField:
                id: name
                hint_text: 'Search'
                font_name: 'OpenSans'
                font_size: '16sp'
                on_focus: True

            MDIconButton:
                icon: 'magnify'
                theme_icon_color: 'Custom'
                icon_color: app.theme_cls.primary_dark
                pos_hint: {'center_y': .5}
                on_release:
                    root.callback(self)

        RecycleView:
            id: search_rv
            viewclass: 'MyContainerSearch'
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            do_scroll_y: True
            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                spacing: dp(0)
                default_size_hint: 1, None
                height: self.minimum_height
                default_size: None, dp(55)
                padding: dp(0) 
        
        MDBottomNavigation:
            id: bottom_nav 
           
            MDBottomNavigationItem:
                name: 'home_screen'
                text: 'Home'
                icon: 'home'
                on_tab_release: root.get_my_screen(self.name)


            MDBottomNavigationItem:
                name: 'favorites'
                text: 'Favorites'
                icon: 'star'
                badge_icon: "numeric-10"
                on_tab_release:
                    root.manager.current = 'favories_screen'


            MDBottomNavigationItem:
                name: 'search_screen'
                text: 'Search'
                icon: 'magnify'
                on_tab_release:
                    root.manager.current = 'search_screen'

            MDBottomNavigationItem:
                name: 'settings'
                text: 'Settings'
                icon: 'cog'
                on_tab_release:
                    root.manager.current = 'settings_screen'


