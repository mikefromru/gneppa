<MyContainerSearch>
    id: my_container_search
    size_hint_y: None
    orientation: 'vertical'
    padding: (dp(10), dp(10), dp(7), dp(0))
    md_bg_color: app.theme_cls.bg_light
    radius: dp(10)

    MDBoxLayout:
        size_hint: 1, .5
        orientation: 'horizontal'
        
        MDIcon:
            icon: root.icon
            padding: (dp(0), dp(0), dp(10), dp(0)) if root.icon != '' else (dp(0), dp(0), dp(0), dp(0))
            theme_text_color: 'Secondary'

        MDLabel:
            text: f'{root.name}   [color=455A64]{root.progress_value}%[/color]' if int(root.progress_value) >= 3 else f'{root.name}'
            font_name: 'OpenSans'
            #font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True
            bold: True

        MDIcon:
            id: my_star
            icon: root.star
            font_size: '22sp'
            theme_text_color: 'Custom'
            text_color: app.theme_cls.accent_light
            pos_hint: {'center_x': .7, 'center_y': .5}
            opacity: 0

    MDBoxLayout:
        MDLabel:
            text: root.description
            font_name: 'OpenSans'
            #font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True

    MDBoxLayout:
        padding: [dp(0), dp(0), dp(0), dp(10)]
        spacing: dp(20)
        orientation: 'horizontal'
        MDRoundFlatIconButton:
            text: 'Vocabularu'
            icon: 'school'
            font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True
            size_hint: 1, None

        MDFillRoundFlatButton:
            text: 'Questions'
            font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            markup: True
            size_hint: 1, None

<SearchScreen>

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientaiton: 'horizontal'
            size_hint_y: None
            height: dp(70)
            
            MDIconButton:
                icon: ''
#            MDIconButton:
#                icon: 'arrow-left'
#pos_hint: {'center_y': .5}
                #theme_icon_color: 'Custom'
                #icon_color: 'white'
#on_release: root.go_home()
                    #root.manager.transition.direction = 'right'
                    #root.manager.current = 'home_screen'

            MDTextField:
                id: name
                hint_text: 'Search'
                font_name: 'OpenSans'
                font_size: '16sp'
                on_focus: True

            MDIconButton:
                icon: 'magnify'
                theme_icon_color: 'Custom'
                icon_color: app.theme_cls.primary_dark
                pos_hint: {'center_y': .5}
                on_release:
                    root.callback(self)

        RecycleView:
            id: search_rv
            viewclass: 'MyContainerSearch'
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            do_scroll_y: True
            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                spacing: dp(20)
                default_size_hint: 1, None
                height: self.minimum_height
                default_size: None, dp(150)
                padding: dp(20) 
