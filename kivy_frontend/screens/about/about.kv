<AboutScreen>

    MDBoxLayout:
        orientation: 'vertical'
        padding: (dp(10), dp(30), dp(10), dp(0))
        # size_hint: None, None
        # size: "350dp", "200dp"
        # md_bg_color: 'red'
        # pos_hint: {"center_x": .5, "center_y": .5}

        Image:
            source: 'i/logo/tmp.png'

        MDLabel:
            text: '[b][size=23sp]Gneppa is a free app to learn English[/size][/b]\n\nIf you already understand the basics but want to improve your English, this app is for you. With our free mobile app a few minutes a day, everyone can improve his spoken english by answering simple questions.'
            halign: 'center'
            markup: True
            
        
        # Widget:

        MDFillRoundFlatIconButton:
            # padding:  dp(20)
            text: 'Go back'
            icon: 'home'
            pos_hint: {"center_x": .5}
            on_release: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'home_screen'

        MDLabel:
            text: 'Version 1.1'
            halign: 'center'
